{
  "name": "io.solarwallet.app",
  "version": "0.28.1",
  "description": "Wallet for the Stellar payment network by SatoshiPay.",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "SatoshiPay Ltd",
    "email": "hello@solarwallet.io"
  },
  "homepage": "https://solarwallet.io/",
  "repository": "github:satoshipay/solar",
  "main": "./electron/lib/index.prod.js",
  "scripts": {
    "precommit": "lint-staged",
    "lint:fix": "eslint --fix '{src,stories,electron/src}/**/*.{ts,tsx}'",
    "prettier": "prettier --write '{src,stories}/**/*.{ts,tsx}' *.md electron/src/*.ts",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:pbt": "vitest --run --testNamePattern='Property [0-9]+:'",
    "lint": "eslint '{src,stories,electron/src}/**/*.{ts,tsx}'",
    "clean:dist": "rimraf dist/*",
    "clean:electron:ts": "rimraf electron/lib/*",
    "prebuild:electron:bundle": "NODE_ENV=production parcel build ./src/index.prod.njk --detailed-report --no-cache --no-source-maps --public-url=./",
    "prebuild:electron:ts": "npm run clean:electron:ts && cd electron && tsc",
    "prebuild:electron:ts:watch": "npm run clean:electron:ts && cd electron && tsc -w",
    "prebuild:electron": "run-s prebuild:electron:ts clean:dist prebuild:electron:bundle",
    "build:linux": "PLATFORM=linux npm run prebuild:electron && electron-builder --linux --x64 --config ./electron-build.yml",
    "build:mac": "PLATFORM=darwin npm run prebuild:electron && electron-builder --mac --x64 --config ./electron-build.yml",
    "build:mac:signed": "source ./scripts/signing-env.sh mac && NOTARIZE=true npm run build:mac -- -c.forceCodeSigning=true",
    "build:win": "PLATFORM=win32 npm run prebuild:electron && electron-builder --win --ia32 --config ./electron-build.yml",
    "build:win:signed": "source ./scripts/signing-env.sh win && npm run build:win -- -c.forceCodeSigning=true",
    "dev": "run-p prebuild:electron:ts:watch dev:bundle dev:app:delayed",
    "dev:app": "NODE_ENV=development TS_NODE_PROJECT=./electron/tsconfig.json run-electron -r ts-node/register/transpile-only ./electron/src/index.dev",
    "dev:app:delayed": "sleep 2 && run-s dev:app",
    "dev:bundle": "NODE_ENV=development parcel watch ./src/index.dev.njk --hmr-hostname localhost --public-url=./"
  },
  "lint-staged": {
    "ignore": [
      "**/*.yml"
    ],
    "linters": {
      "*": [
        "prettier --write",
        "git add"
      ]
    }
  },
